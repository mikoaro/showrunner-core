# ==========================================
# Service Configuration
# ==========================================
SERVICE_NAME=showrunner-core
ENV_TYPE=development
LOG_LEVEL=INFO
PORT=8080

# ==========================================
# Infrastructure (State Store)
# ==========================================
REDIS_URL=redis://localhost:6379

# ==========================================
# Metaflow Configuration (The "Paved Path")
# ==========================================
# In production, these point to the centralized Metadata Service.
# For local dev, we use local storage to keep it runnable without AWS.
METAFLOW_DEFAULT_DATASTORE=local
METAFLOW_DATASTORE_SYSROOT_LOCAL=./metaflow_data
METAFLOW_DEFAULT_METADATA=local

# If deploying to Cloud Run with real S3:
# METAFLOW_DEFAULT_DATASTORE=s3
# METAFLOW_DATASTORE_SYSROOT_S3=s3://your-metaflow-bucket/flow_root
# METAFLOW_SERVICE_URL=http://your-metadata-service-url

# ==========================================
# Security
# ==========================================
API_SECRET_KEY=dev-secret-do-not-use-in-prod
ALLOWED_ORIGINS=["http://localhost:3000"]
